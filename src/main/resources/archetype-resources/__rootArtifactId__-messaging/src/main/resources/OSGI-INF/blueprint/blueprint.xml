#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0" default-activation="eager">

  <reference id="connectionFactory" interface="javax.jms.ConnectionFactory" />

  <reference id="${mapseqPipelineName}PipelineBeanService" interface="edu.unc.mapseq.pipeline.PipelineBeanService"
    component-name="${mapseqPipelineName}PipelineBeanService" />

  <bean id="${mapseqPipelineName}PipelineMessageService" class="edu.unc.mapseq.messaging.${mapseqDotPackageName}.${mapseqPipelineName}PipelineMessageService"
    init-method="start" destroy-method="stop" activation="eager">
    <property name="connectionFactory" ref="connectionFactory" />
    <property name="pipelineBeanService" ref="${mapseqPipelineName}PipelineBeanService" />
    <property name="destinationName" value="queue/${mapseqDotPackageName}" />
  </bean>

</blueprint>
